{
    "extends": [
      "google",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:flowtype/recommended",
      "plugin:react/recommended"
    ],
    "plugins": [
      "import",
      "flowtype",
      "react"
    ],
    "env": {
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [
            "node_modules",
            "./build/test",
            "./src"
          ]
        }
      }
    },
    "rules": {
      "require-jsdoc": "off"
    }
}
